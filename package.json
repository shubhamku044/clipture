{
  "name": "clipture",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter app dev",
    "dev:landing": "pnpm --filter landing dev",
    "build": "pnpm -r build",
    "dev:backend": "cd backend && go run ./cmd",
    "dev:all": "concurrently -n app,landing -c cyan,green \"pnpm dev\" \"pnpm dev:landing\""
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
# =================================
# Backend Environment Configuration
# =================================

# Server Configuration
PORT=8080
ENV=development
LOG_LEVEL=debug
LOG_PRETTY=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clipture_dev
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL_MODE=disable

# JWT Configuration
JWT_SECRET=development_jwt_secret_min_32_characters
JWT_EXPIRY=24h

# Authentication Configuration
AUTH_JWT_SECRET=development_auth_secret_min_32_characters
AUTH_JWT_EXPIRY_HOURS=72
AUTH_PASSWORD_RESET_EXPIRY=24h
AUTH_TOKEN_ISSUER=clipture-app-dev

# API Configuration
API_TIMEOUT=30s
API_RATE_LIMIT=1000

# Monitoring (disabled in development)
METRICS_ENABLED=false
TRACING_ENABLED=false

# Production values (change these for production)
# ENV=production
# LOG_LEVEL=info
# LOG_PRETTY=false
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=clipture
# JWT_SECRET=your_production_jwt_secret_here_min_32_characters
# AUTH_JWT_SECRET=your_production_auth_secret_here_min_32_characters
# API_RATE_LIMIT=100
# METRICS_ENABLED=true
# TRACING_ENABLED=true 
# =================================
# Clipture Docker Environment Variables
# =================================

# Database Configuration
POSTGRES_DB=clipture
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Backend Configuration  
BACKEND_PORT=8080
ENV=production
LOG_LEVEL=info
LOG_PRETTY=false

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_here_min_32_characters
JWT_EXPIRY=24h
AUTH_JWT_SECRET=your_production_auth_secret_here_min_32_characters
AUTH_JWT_EXPIRY_HOURS=72
AUTH_PASSWORD_RESET_EXPIRY=24h
AUTH_TOKEN_ISSUER=clipture-app

# API Configuration
API_TIMEOUT=30s
API_RATE_LIMIT=100

# Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=true

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Frontend Configuration
FRONTEND_PORT=3000
LANDING_PORT=3001

# Development overrides (for compose.dev.yml)
DEV_POSTGRES_PORT=5432
DEV_BACKEND_PORT=8080
DEV_LOG_LEVEL=debug
DEV_LOG_PRETTY=true
DEV_METRICS_ENABLED=false
DEV_TRACING_ENABLED=false 